{
  "name": "web-to-figma-plugin",
  "version": "1.0.0",
  "description": "Import web pages as editable Figma designs",
  "scripts": {
    "clean": "rm -rf dist node_modules/.cache .cache && rm -f tsconfig.tsbuildinfo",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "build:bundle": "node esbuild.config.cjs",
    "build": "npm run typecheck && npm run build:bundle",
    "watch": "npm run typecheck && node esbuild.config.cjs --watch"
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.90.0",
    "@types/node": "^20.0.0",
    "@types/pako": "^2.0.3",
    "concurrently": "^8.2.0",
    "esbuild": "^0.25.11",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "pako": "^2.1.0"
  }
}
